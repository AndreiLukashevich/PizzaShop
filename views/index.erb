<h2>Welcom to Pizza Shop!</h2>

<br />
<br />
<div class="row">

  <% @products.each do |p| %>
    <div class="col-md-4">

      <div>
        <%= p.title %>
      </div>

      <br />
      <div>
        <img src="<%= p.path_to_image %>" />
      </div>
      <br />

      <div>
        <%= p.description %>
      </div>

      <div>
        Size: <%= p.size %> cm
      </div>

      <div>
        Price: <%= p.price %> BYN
      </div>

      <br />
      <div>
        <button class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Add to cart</button>
      </div>

    </div>
  <% end %>

</div>
